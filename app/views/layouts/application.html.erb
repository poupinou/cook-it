<!DOCTYPE html>
<html>
  <head>
    <title>CookIt</title>

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="icon" href=<%= asset_path 'favicon.ico' %> />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </head>

  <body>

  	<div id ="masterbar-yield"><%= render 'layouts/partials/masterbar' %></div>
        <% flash.each do |key, value| %>
          <div style="position: fixed;top: 5%" class="alert alert-<%= key %>"><%= value %></div>
        <% end %>

		<div id ="yield">
      <div id='home'>
        <%= yield %>
      </div>
    </div>
  </body>
</html>


<script type="text/javascript">

  elmt = document.getElementById('masterbar')
  menu = document.getElementById('menu')
  page = document.getElementById('home')
  back = document.getElementById('back')

  if(window.innerWidth<680) {
    elmt.style.display = "none";
    page.style.marginLeft = "85px";
    menu.style.display = "block";
    back.style.display = "block";
  }


  window.addEventListener('resize', function() {
  if(window.innerWidth<680) {
    elmt.style.display = "none";
    page.style.marginLeft = "85px";
    menu.style.display = "block";
    back.style.display = "block";
  }
  else
  {
    page.style.marginLeft = "200px";
    elmt.style.display = "block";
    menu.style.display = "none";
    back.style.display = "none";
  }
});

  function shw()
  {
    if(elmt.style.display == "none"){
      page.style.marginLeft = "200px";
      elmt.style.display = "block";
      menu.style.display = "none";
      back.style.display = "block";
    }
    else
    {
      elmt.style.display = "none";
      page.style.marginLeft = "85px";
      menu.style.display = "block";
      back.style.display = "none";
    }
  }
</script>
