<div>
  <h1>Ajouter un ingrédient</h1>

  <%= form_for @ingredient do |ing| %>
    <p><%= ing.text_field :name, placeholder: 'Nom de l\'ingrédient' %></p>
    <p><%= ing.text_field :family, placeholder: 'Famille de l\'ingrédient' %></p>
    <p><%= ing.text_field :picture, placeholder: 'URL de l\'ingrédient' %></p>
    <p><%= ing.text_field :price, placeholder: 'Prix de l\'ingrédient' %></p>

    <p><%= ing.submit 'Ajouter cet ingrédient' %></p>
  <% end %>

</div>
