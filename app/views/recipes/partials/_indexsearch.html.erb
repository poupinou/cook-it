<% @recipes.each do |recipe| %>
  <a href=<%= recipe_path(recipe.id) %>>
    <div class="card">
      <img class="card-img-top" src=<%= recipe.picture_url(:mini) %> alt="Card image cap" style="width: 100%;"/>
      <div class="card-body">
          <h5 class="card-title"><%= recipe.name.capitalize %></h5>
          <span><%= recipe.time %> min - <% if recipe.price %><%= (recipe.price) / 100 %> €<% end %></span>
        <div class='btn-recipe'>
          <%= form_tag add_to_list_path, method: 'post' do %>
            <%= hidden_field_tag(:recipe_id, recipe.id) %>
            <%= submit_tag('Ajouter à ma liste', class: 'btn-submit btn btn-primary') %>
          <% end %>
        </div>
      </div>
      <div class="card-hover">
        <div class="card-hover-background"></div>
        <h3 class="card-hover-info"><%= recipe.name %></h3>
        <div class="card-hover-info">

        </div>
        <div class="card-hover-link">
          <% if ( user_signed_in? && current_user.rights == 99 ) || ( user_signed_in? && recipe.user_id == current_user.id ) %>
            <div class='btn-edit-delete'>
              <%= button_to 'Edit', edit_recipe_path(recipe.id), class: 'btn-submit2 btn btn-warning', remote:true %>
              <%= button_to 'Delete', recipe, remote:true,method: :delete, class: 'btn-submit2 btn btn-danger', data: { confirm: 'Non sérieux elle te plait pas ?' } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </a>
<% end %>