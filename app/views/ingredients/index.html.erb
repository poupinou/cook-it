<div class="ingredients-g">
  <center class="ingredients-head">
    <div class="ingredient-titre">
        <h3>Ingredients</h3>
      <div class="ingredient-link">
        <p><%= link_to 'Ajouter', new_ingredient_path %></p>
        <p><%= link_to 'retour', admin_path  %></p>
      </div>
    </div>

  </center>
      <form  data-remote="true" id="form1" action='<%= ingredients_path %>' accept-charset="UTF-8" method="get">
      <input id='nom' name="nom" placeholder="Rechercher" onkeyup="su()">
      <input id='sub' style="display: none" type="submit">
    </form>
  <div class="ingredients-corps">
    <% @ingredients.each do |ingredient| %>
      <div class="card" style="width: 150px; height: 150px; cursor: pointer;">
        <img class="card-img-top" src=<%= ingredient.picture_url(:mini) %> alt="Card image cap" style="position: absolute; z-index: 1">
        <center class="card-body" style="z-index:2">
        <h5 class="card-title"><%= ingredient.name %></h5>
        </center>
        <div class="card-hover">
          <div class="card-hover-background"></div>
          <h5 class="card-hover-info"><%= ingredient.name %></h5>
          <div class="card-hover-link">
            <%= link_to 'Edit', edit_ingredient_path(ingredient.id),class:"btn btn-secondary btn-sm card-link" %>
            <%= link_to 'Delete', ingredient, method: :delete,remote:true, data: { confirm: 'Certain ?'}, class:"btn btn-primary btn-sm card-link" %>
          </div>
          <div class="card-hover-info">
            <div><%= ingredient.family %></div>
            <div><%= ingredient.price %>$</div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
 document.getElementById('nom').focus();
function su()
{
  document.getElementById('sub').click();
}
</script>